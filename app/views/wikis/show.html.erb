<div>
<h1>
  <%= markdown(@wiki.title) %> <br>
  <small>
    submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @user_email %>
  </small>
</h1>

<div class="row">
  <div class="col-md-8">
    <p><%= markdown(@wiki.body) %></p>
  </div>

  <div class="col-md-4">
      <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
      <% if (current_user.role == 'admin' && @wiki.private == true) || (current_user.role == 'premium' && @wiki.private == true && @wiki.user_id == current_user.id) %>
        <%= link_to "Add Collaborator", new_wiki_collaborator_path(@wiki), class: 'btn btn-info' %>
      <% end %>
      <%= link_to "Delete Post", [@wiki], method: :delete , class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
      </div>
  </div>
  <% if @wiki.private %>
        <% if Collaborator.exists?(wiki_id: @wiki) %>
          <%= render partial: 'collaborators/users' %>
        <% end %>
      <% end %>
